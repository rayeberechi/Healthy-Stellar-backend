# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=healthy-stellar-backend

# Database Configuration - PostgreSQL
# REQUIRED: Set these values for your environment
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_db_username
DB_PASSWORD=your_secure_db_password
DB_NAME=healthy_stellar_dev

# Database SSL Configuration (HIPAA Requirement)
# Set to 'true' for production environments
DB_SSL_ENABLED=true
# Path to SSL CA certificate (optional, for production)
DB_SSL_CA=
# Path to SSL client certificate (optional, for production)
DB_SSL_CERT=
# Path to SSL client key (optional, for production)
DB_SSL_KEY=

# Database Connection Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=20

# Data Encryption Configuration (HIPAA Requirement)
# CRITICAL: Generate a strong encryption key using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=1h
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRATION=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Rate Limiting (Security)
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@healthystellar.com

# Stellar Network Configuration
STELLAR_NETWORK=testnet
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Audit Configuration
AUDIT_RETENTION_DAYS=2555
ENABLE_AUDIT_LOGGING=true

# HIPAA Compliance Settings
ENABLE_DATA_ENCRYPTION=true
ENABLE_ACCESS_LOGGING=true
ENABLE_DETAILED_AUDIT=true
DATA_RETENTION_DAYS=2555

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90
BACKUP_DIR=/backups
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_change_in_production

# Environment-Specific Database Names
# Development
# DB_NAME=healthy_stellar_dev

# Testing
# DB_NAME=healthy_stellar_test

# Staging
# DB_NAME=healthy_stellar_staging

# Production
# DB_NAME=healthy_stellar_prod
# ============================================
# JWT & Authentication Configuration
# ============================================

# JWT Secret Key (HIPAA: Use strong random key)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters

# JWT Token Expiration (HIPAA: Keep short for security)
JWT_EXPIRATION=15m

# Refresh Token Secret
REFRESH_TOKEN_SECRET=your-super-secret-refresh-key-change-this-in-production-minimum-32-characters

# Refresh Token Expiration
REFRESH_TOKEN_EXPIRATION=7d

# ============================================
# Session Management (HIPAA ยง 164.312(a)(2)(i))
# ============================================

# Session Timeout in minutes (HIPAA requirement: 15 minutes inactivity)
SESSION_TIMEOUT_MINUTES=15

# Maximum concurrent sessions per user
MAX_SESSIONS_PER_USER=5

# ============================================
# Password Policy (HIPAA Compliance)
# ============================================

# Minimum password length
PASSWORD_MIN_LENGTH=12

# Password expiration in days (HIPAA: 90 days)
PASSWORD_EXPIRATION_DAYS=90

# Password history count (cannot reuse last N passwords)
PASSWORD_HISTORY_COUNT=12

# Account lockout threshold (failed attempts)
LOCKOUT_THRESHOLD=5

# Account lockout duration in minutes
LOCKOUT_DURATION_MINUTES=30

# ============================================
# MFA Configuration
# ============================================

# MFA Required for medical staff
MFA_REQUIRED_FOR_STAFF=true

# MFA Time Window (seconds)
MFA_TIME_WINDOW=30

# Backup codes count
BACKUP_CODES_COUNT=8

# ============================================
# Rate Limiting & Security
# ============================================

# Rate limit requests per minute
RATE_LIMIT_REQUESTS=100

# Rate limit time window in seconds
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================
# Audit & Logging (HIPAA ยง 164.312(b))
# ============================================

# Enable audit logging
AUDIT_LOGGING_ENABLED=true

# Audit log retention in days
AUDIT_LOG_RETENTION_DAYS=365

# Log high-risk events
LOG_HIGH_RISK_EVENTS=true

# ============================================
# Database Configuration
# ============================================

# Database type (sqlite for development, postgres for production)
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=healthy_stellar
DB_SYNCHRONIZE=false

# ============================================
# HIPAA Compliance Settings
# ============================================

# Enable HIPAA compliance checks
HIPAA_COMPLIANCE_ENABLED=true

# PHI Encryption Key (for encrypting sensitive data at rest)
PHI_ENCRYPTION_KEY=your-phi-encryption-key-minimum-32-characters

# Enable field-level encryption for PHI
ENABLE_FIELD_LEVEL_ENCRYPTION=true

# ============================================
# Security Headers
# ============================================

# Enable security headers (helmet)
ENABLE_SECURITY_HEADERS=true

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# Application Settings
# ============================================

# Node environment
NODE_ENV=development

# Application port
PORT=3000

# Application name
APP_NAME=Healthy Stellar

# API version
API_VERSION=1.0.0
