{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["resourceType", "id", "status", "scope", "category", "patient"],
  "properties": {
    "resourceType": {
      "type": "string",
      "const": "Consent"
    },
    "id": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "proposed", "active", "rejected", "inactive", "entered-in-error"]
    },
    "scope": {
      "type": "object",
      "properties": {
        "coding": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "system": { "type": "string" },
              "code": { "type": "string" },
              "display": { "type": "string" }
            }
          }
        }
      }
    },
    "category": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "coding": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "system": { "type": "string" },
                "code": { "type": "string" },
                "display": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "patient": {
      "type": "object",
      "properties": {
        "reference": { "type": "string" }
      }
    },
    "dateTime": {
      "type": "string",
      "format": "date-time"
    },
    "performer": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "reference": { "type": "string" }
        }
      }
    },
    "provision": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["deny", "permit"]
        },
        "period": {
          "type": "object",
          "properties": {
            "start": { "type": "string", "format": "date-time" },
            "end": { "type": "string", "format": "date-time" }
          }
        },
        "actor": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "role": { "type": "object" },
              "reference": {
                "type": "object",
                "properties": {
                  "reference": { "type": "string" }
                }
              }
            }
          }
        },
        "action": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "coding": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "system": { "type": "string" },
                    "code": { "type": "string" },
                    "display": { "type": "string" }
                  }
                }
              }
            }
          }
        },
        "data": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "meaning": { "type": "string" },
              "reference": {
                "type": "object",
                "properties": {
                  "reference": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}
