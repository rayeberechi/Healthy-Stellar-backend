# App
NODE_ENV=development        # Set to "test" to skip email sends and log instead
APP_URL=http://localhost:3000

# SMTP (Mailer)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=user@example.com
SMTP_PASS=yourpassword

MAIL_FROM_NAME=HealthRecord
MAIL_FROM_ADDRESS=noreply@healthrecord.com

# Redis (BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
UNSUBSCRIBE_SECRET=change-this-to-a-long-random-secret
